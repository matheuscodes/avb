<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
        android:id="@+id/trial_super_master">

    <ProgressBar
        android:id="@+id/trial_countdown"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:visibility="visible" />
    
    <Button
        android:id="@+id/trial_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="@string/trial_next"/>
    
    <RelativeLayout
        android:id="@+id/trial_content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/trial_confirm"
        android:layout_below="@+id/trial_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />    

</RelativeLayout>
